1.
/*Suma de los números enteros entre 1 y N.*/
#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        cout << i << "+";
        suma = suma + i;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

2.
/*Suma de los números enteros impares comprendidos entre 1 y N.
	S=1+3+5+⋯…………+N */

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i+=2)
    {
        cout << i << "+";
        suma = suma + i;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

3.
/* Suma de los cuadrados de los primeros N números enteros.
	S=1^2+2^2+3^2+⋯…………+N^2 */

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        cout << i << "^"<<2<<"+";
        suma+=i*i;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

4.
/*Calcular la siguiente suma
	S= 1 - 2 + 3 - 4 + 5 - .........+/- N.*/

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    int signo=1;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        cout << i <<"+";
        suma+=signo*i;
        signo*=-1;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

5.
/*Calcular el producto de los primeros N números enteros.
	P= 1x2x3x........xN */

#include <iostream>

using namespace std;

int main()
{
    int N;
    int producto=1;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        producto*=i;
    }
        cout << endl<< "El producto es: " << producto << endl;
        
    return 0;
}

6.
/*Calcular la siguiente serie, donde X es un número real.
	S=x^1+x^2+x^3+⋯…………+x^n */
	
#include <iostream>
using namespace std;
#include <cmath>

int main()
{
    int X,N;
    float suma = 0.0, termino;
    do
    {
        cout<<"Introduzca el valor de X: ";
        cin >> X;
        if (X < 0)
        {
            cout << "El valor X deber ser mayor a cero" << endl;
        }
    } while (X < 0);
    do
    {
        cout << "Introduzca el valor de N: ";
        cin >> N;
        if (N < 0)
        {
            cout << "El valor de N debe ser mayor a 0" << endl;
        }
    } while (N < 0);

    for (int i = 1; i <= N; i++)
    {
        suma += pow(X,i);
    }
    cout<<"La suma de la serie es: "<<suma<<endl;
return 0;
}

7.
/*	Calcular el factorial de un número entero N. Donde se define como factorial de la siguiente forma: FAC(N) = 1x2x3x.....xN;
donde el factorial de cero es uno  (FAC(0) =1).  FAC(N)=N!, se lee factorial (!) de N.*/

#include <iostream>

using namespace std;

int main()
{
    int N;
    int FACTN=1;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        FACTN*=i;
    }
        cout << endl<< "El factorial del número dado es: " << FACTN << endl;
        
    return 0;
}

8.
/*Calcular la siguiente serie: S= X/1! + X^2/2! + X^3/3! + ........X^n/n!*/

#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int X,N;
    float suma = 0.0, termino;
    //pedir y validar valores
    do
    {
        cout << "Introduzca el valor de X: ";
        cin >> X;
        if (X < 0)
        {
            cout << "El valor X deber ser mayor a cero" << endl;
        }
    } while (X < 0);
    do
    {
        cout << "Introduzca el valor de N: ";
        cin >> N;
        if (N < 0)
        {
            cout << "El valor de N debe ser mayor a 0" << endl;
        }
    } while (N < 0);

    for (int i = 1; i <= N; i++)
    {
        termino = pow(X, i) / 1.0;
        for(int j = 2; j <= i; ++j)
        {
            termino =termino/j;
            cout << X << "^" << i << "/"<< j << "+";
        }
        suma = suma+termino;
    }
    cout <<endl<< "El resultado de la serie es: " << suma <<endl;
return 0;
}

