1.
/*Suma de los números enteros entre 1 y N.*/
#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        cout << i << "+";
        suma = suma + i;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

2.
/*Suma de los números enteros impares comprendidos entre 1 y N.
	S=1+3+5+⋯…………+N */

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i+=2)
    {
        cout << i << "+";
        suma = suma + i;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

3.
/* Suma de los cuadrados de los primeros N números enteros.
	S=1^2+2^2+3^2+⋯…………+N^2 */

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        cout << i << "^"<<2<<"+";
        suma+=i*i;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

4.
/*Calcular la siguiente suma
	S= 1 - 2 + 3 - 4 + 5 - .........+/- N.*/

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma=0;
    int signo=1;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        cout << i <<"+";
        suma+=signo*i;
        signo*=-1;
    }
        cout << endl<< "La suma es: " << suma << endl;
        
    return 0;
}

5.
/*Calcular el producto de los primeros N números enteros.
	P= 1x2x3x........xN */

#include <iostream>

using namespace std;

int main()
{
    int N;
    int producto=1;
    do
    {
        cout << "Introduzca el valor de n: ";
        cin >> N;
        if (N<0)
        {
            cout << "El valor n deber ser mayor a 1" << endl;
        }
    } while (N<=0);

    for (int i = 1; i <= N; i++)
    {
        producto*=i;
    }
        cout << endl<< "El producto es: " << producto << endl;
        
    return 0;
}
