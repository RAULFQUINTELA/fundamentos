EJERCICIO 1

#include <iostream>

using namespace std;

int main()
{
    float b,h,area,p;
    cout<<"Ingrese el 1er dato de la base del terreno: ";
    cin>>b;
    cout<<"Ingrese el 2do dato de la base del terreno: ";
    cin>>h;
    area=b*h;
    p=(b*2)+(h*2);
    cout<<"El area del terreno es: "<<area<<endl;
    cout<<"El perimetro del terreno es: "<<p<<endl;
    return 0;
    
}

EJERICIO 2

#include <iostream>

using namespace std;

int main()
{
 int cantidad;
 float total;
 
 cout<<"Ingresar la cantidad de camisas: ";
 cin>>cantidad;
 
 if (cantidad<0)
 {
     cout<<"Ingresar numero mayor que 0";
 }
 else
    {
     if (cantidad>=3)
     {
        total=cantidad*5*0.80;
        cout<<"El total de la compra es: "<<total;
     }
     else 
     {
        total=cantidad*5*0.90;
        cout<<"El total de la compra es: "<<total;
     }
    }
    return 0;
}

EJERCICIO 3.1

#include <iostream>

using namespace std;

int main()
{
    float presupuesto,presupuestot;
    int area;
    cout<<"Ingrese el presupuesto"<<endl;
    cin>>presupuesto;
    cout<<"Areas: "<<endl;
    cout<<"1.Ginecologia"<<endl;
    cout<<"2.Traumatologia"<<endl;
    cout<<"3.Pediatria"<<endl;
    cout<<"Ingrese el area: "<<endl;
    cin>>area;
    switch(area)
    {
        case 1:presupuestot=presupuesto*0.4;break;
        case 2:presupuestot=presupuesto*0.3;break;
        case 3:presupuestot=presupuesto*0.3;break;
        default: cout<<"Area registrada erronea";break;
    }
    cout<<"El presupuesto del area "<<area<<" es: "<<presupuestot;
    return 0;
}

