C+++
#include <iostream>
using namespace std;
int main()
{
   float creditos;
   cout<<"Ingresar numero de creditos:";
   cin>>creditos;
   if (creditos>60)
   cout<<"No puede inscribir mas materias:";
   else
   cout<<"Puedes inscribirte";
    return 0;
}
