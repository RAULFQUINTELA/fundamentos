EJERCICIO 3.1

#include <iostream>

using namespace std;

int main()
{
    float presupuesto,presupuestot;
    int area;
    cout<<"Ingrese el presupuesto"<<endl;
    cin>>presupuesto;
    cout<<"Areas: "<<endl;
    cout<<"1.Ginecologia"<<endl;
    cout<<"2.Traumatologia"<<endl;
    cout<<"3.Pediatria"<<endl;
    cout<<"Ingrese el area: "<<endl;
    cin>>area;
    switch(area)
    {
        case 1:presupuestot=presupuesto*0.4;break;
        case 2:presupuestot=presupuesto*0.3;break;
        case 3:presupuestot=presupuesto*0.3;break;
        default: cout<<"Area registrada erronea";break;
    }
    cout<<"El presupuesto del area "<<area<<" es: "<<presupuestot;
    return 0;
}

EJERCICIO 3.2
#include <iostream>

using namespace std;

int main()
{
    float presupuesto,presupuesto1,presupuesto2,presupuesto3;
    cout<<"Calculo de presupuesto correspondiente a cada area"<<endl;
    cout<<"Introducir el presupuesto total: ";
    cin>>presupuesto;
    presupuesto1=presupuesto*0.4;
    cout<<"El area de GinecologÃ¬a tiene un presupuesto de: "<<presupuesto1<<endl;
    presupuesto2=presupuesto*0.3;
    cout<<"El area de Traumatologia tiene un presupuesto de: "<<presupuesto2<<endl;
    presupuesto3=presupuesto*0.3;
    cout<<"El area de Pediatria tiene un presupuesto de: "<<presupuesto3<<endl;
    
    return 0;
}
